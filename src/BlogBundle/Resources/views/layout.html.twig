<!DOCTYPE HTML>
<html>
    <head>
        <meta/>
        <title>{% block title %} Blog Symfony {% endblock %}</title>

        <link rel="stylesheet" href="{{ asset('bundles/blog/css/semantic.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/client.css') }}" />
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
    <header class="ui top stackable menu">
        <div class="item">
            <img src="#" alt="">
        </div>
        <a href="/authors" class="item">Authors</a>
        <a href="#" class="item">Posts</a>
        <a href="#" class="item">Comments</a>

        <div class="ui dropdown item">
            more
            <i class="dropdown icon"></i>
            <div class="menu">
                <a href="/authors" class="item">Authors</a>
                <a href="#" class="item">Posts</a>
                <a href="#" class="item">Comments</a>
            </div>
        </div>

        <div class="right menu">
            <div class="item">
                <div class="ui icon input">
                    <input type="text" placeholder="Search...">
                    <i class="search link icon"></i>
                </div>
            </div>
            <div class="ui dropdown item">
                {% if app.user!=null %}
                    {{ app.user.name }} {{ app.user.surname }}
                    <i class="dropdown icon"></i>
                    <div class="menu">
                        <a href="{{ path("blog_author_logout") }}" class="item" methods="DESTROY">Salir</a>
                        <a href="#" class="item">Ayuda</a>
                    </div>
                {% else %}
                    None
                    <i class="dropdown icon"></i>
                    <div class="menu">
                        <a href="{{ path("blog_author_registrer") }}" class="item">Entrar</a>
                        <a href="#" class="item">Ayuda</a>
                    </div>
                {% endif %}

            </div>
        </div>

    </header>

    <section id="content" style="margin-top: 4em;">
        {% block content %}{% endblock %}
    </section>


    <footer>
        Blog Symfony- Application of example
    </footer>
    </body>
    <script src="{{ asset('bundles/blog/js/jquery.js') }}"></script>
    <script src={{ asset('bundles/blog/js/semantic.min.js') }}></script>
    <script src="{{ asset('bundles/blog/js/client.js') }}"></script>
    {% block javascripts %}{% endblock %}
</html>